<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.marcokoopman.weatherapp2.MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SmartHome"
        android:textAlignment="center"
        android:textSize="40dp"
        android:paddingBottom="20dp"
        android:paddingTop="20dp"
        android:background="#2C3539"
        android:layout_centerHorizontal="true"
        android:id="@+id/info" />


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Prefrences"
        android:paddingTop="25dp"
        android:paddingBottom="25dp"
        android:textAlignment="center"
        android:id="@+id/button"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:onClick="GotoViewPrefrences" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="#2C3539"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome"
            android:id="@+id/homeTitle"
            android:layout_marginTop="43dp"
            android:layout_gravity="center_horizontal|top" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="email"
            android:layout_marginTop="40dp"
            android:id="@+id/textView2"
            android:textSize="12dp"
            android:layout_gravity="center" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="email"
            android:id="@+id/emailView"
            android:layout_gravity="center" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mac adress"
            android:id="@+id/textView3"
            android:layout_marginRight="10dp"
            android:layout_gravity="right|center_vertical" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mac adress"
            android:layout_marginTop="40dp"
            android:id="@+id/macadressView"
            android:textSize="12dp"
            android:layout_marginRight="10dp"
            android:layout_gravity="right|center_vertical" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Username"
            android:layout_marginLeft="10dp"
            android:id="@+id/textView"
            android:layout_gravity="left|center_vertical" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ssadsasad"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="10dp"
            android:textSize="12dp"
            android:id="@+id/UsernameView"
            android:layout_gravity="left|center_vertical" />

    </FrameLayout>
</RelativeLayout>
